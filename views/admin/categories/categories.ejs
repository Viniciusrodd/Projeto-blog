<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link rel="stylesheet" href="/categories.css">
</head>
<body>
    <header>
        <h1><a href="/">GuiaPress</a></h1>
        <h3><a href="/admin/categories/new">Categories section</a></h3>
    </header>

    <div id="container">
        <h2>Categorias</h2>
        <button id="categorias">
            <a href="/admin/categories/new">Criar nova categoria</a>
        </button>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((categoriesDados) => { %>
                    <tr>
                        <td id="td-id"><%= categoriesDados.id %></td>
                        <td><%= categoriesDados.title %></td>
                        <td><%= categoriesDados.slug %></td>
                        <td id="td-buttons">
                            <button id="editar">
                                Editar
                            </button>
                            <form method="post" action="/categories/delete">
                                <input type="hidden" name="id" value="<%= categoriesDados.id %>"> <!--Carregando id de forma dinâmica-->
                                    <button id="deletar">
                                        Deletar
                                    </button>
                                </input>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
</html>